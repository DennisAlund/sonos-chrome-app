{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "default_locale": "en",
    "description": "__MSG_appDescription__",
    "version": "0.0.3",
    "app": {
        "background": {
            "scripts": [
                "lib/requirejs/require.js",
                "run_background.js"]
        }
    },
    "minimum_chrome_version": "33",
    "permissions": [
        "http://*/",
        "storage"
    ],
    "sockets": {
        "udp": {
            "send": "*",
            "bind": "0.0.0.0",
            "multicast": "*"
        },
        "tcp": {
            "connect": "*"
        },
        "tcpServer": {
            "listen": "0.0.0.0"
        }
    },
    "icons": {
        "16": "icons/app16.png",
        "48": "icons/app48.png",
        "128": "icons/app128.png"
    }
}
