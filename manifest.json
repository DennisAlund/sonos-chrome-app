{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "default_locale": "en",
    "description": "__MSG_appDescription__",
    "version": "0.0.3",
    "app": {
        "background": {
            "scripts": [
                "lib/requirejs/require.js",
                "bootstrap.runtime.js"]
        }
    },
    "minimum_chrome_version": "30",
    "permissions": [
        "http://*/",
        "storage",
        {
            "socket": [
                "udp-send-to",
                "udp-bind",
                "udp-multicast-membership"
            ]
        }
    ],
    "icons": {
        "16": "icons/app16.png",
        "48": "icons/app48.png",
        "128": "icons/app128.png"
    }
}
